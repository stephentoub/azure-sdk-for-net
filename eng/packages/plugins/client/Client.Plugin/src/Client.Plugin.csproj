<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0-beta.1</Version>
    <RequiredTargetFrameworks>$(LtsTargetFramework)</RequiredTargetFrameworks>
    <TargetFrameworks>$(RequiredTargetFrameworks)</TargetFrameworks>
    <!--Ensure all dependencies are copied to the output directory so that they can be packaged up for npm.-->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeSpec.Generator.ClientModel" />
  </ItemGroup>


  <PropertyGroup>
    <AzureGeneratorSource>$(MSBuildThisFileDirectory)..\..\..\..\http-client-csharp\generator\Azure.Generator\src\</AzureGeneratorSource>
    <AzureCoreSharedSource>$(MSBuildThisFileDirectory)..\..\..\..\..\..\sdk\core\Azure.Core\src\Shared\</AzureCoreSharedSource>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(AzureGeneratorSource)\Visitors\ClientRequestIdHeaderVisitor.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureGeneratorSource)\Visitors\NamespaceVisitor.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureGeneratorSource)\Visitors\ModelFactoryRenamerVisitor.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureGeneratorSource)\Visitors\MultiPartFormDataVisitor.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureGeneratorSource)\Extensions\ConfigurationExtensions.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureGeneratorSource)\Utilities\TypeNameUtilities.cs" LinkBase="Shared/" />
    <Compile Include="$(AzureCoreSharedSource)\TaskExtensions.cs" LinkBase="Shared/Core" />
  </ItemGroup>

  <!-- Copy output to package dist path  -->
  <Target Name="CopyForNpmPackage" AfterTargets="Build">
    <Message Text="Copying output to dist path" Importance="high" />
    <ItemGroup>
      <SourceDir Include="$(OutputPath)**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(SourceDir)" DestinationFolder="$(MSBuildThisFileDirectory)..\..\dist\%(RecursiveDir)" />
  </Target>
</Project>
